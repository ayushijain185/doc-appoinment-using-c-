            cout<<"select Doctor : ";
            cin>>k;
            if(k==1){
                
                cout<<"Ashish verma - MBBS\n";
                cout<<"fees : 500\n";
                cout<<"select the day( mon tue sat ) : ";
                cin>>day;
                cout<<"To final Enter 1 , To go back Enter 2\n";
                cout<<"Enter : ";
                cin>>u;
                if(u==1){
                    cout<<"select the day( mon tue sat ) : ";
                    cin>>day;
                    ofstream out("1_Generalphysician.txt ",ios::app);
                    out<<"\n\npatient name : " + name;
                    out<<"\nfathers/Husband name : "+ fname;
                    out<<"\nAge : "+ age;
                    out<<"\nCity : "+ address;
                    out<<"\ncontact: "+ contact;
                    out<<"\nday : " + day;
                    out.close();
                    thank();
                }
                else{
                    department();
                    doctor();
                }
            
            }
