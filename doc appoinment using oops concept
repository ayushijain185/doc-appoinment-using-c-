void nirbikar::admin()
{
        cout<<"\n";
        cout<<"\n";
        cout<<"                                 Login\n";
        cout<<"                        ENTER THE USER NAME : ";
        cin>>uname;
        cout<<"                        Enter your password : ";
        cin>>password;
        if(password == "admin")
        {
            system("CLS");
            doctora();
        }
        else{
            system("CLS");
            cout<<endl;
            cout<<endl;
            cout<<"                           wronge password \n";
            cout<<"                              try again\n";
            admin();
        }
}
