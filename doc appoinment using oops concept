int nirbikar::user()
{
        int a;
        cout<<"\n";
        cout<<"                                      Nirbikar welcomes you\n                                   ";
        cout<<"\n";
        cout<<"\n";
        cout<<"        We are providing 24/7 services\n";
        cout<<"\n";
        cout<<"        If you want take an appoinment     :  Enter 1\n";
        cout<<"        And for Check the Doctors and Details :  Enter 2\n";
        cout<<"\n";
        cout<<"        Note :- we book Appoinment for up to 7 days";
        cout<<"\n";
        cout<<"        Enter : ";
        cin>>a;
        if(a==1){
            appoinment();
        }
        else{
            system("CLS");
            check();
        }
}
void nirbikar::appoinment()
{
    pateintinfo();
        
}

void nirbikar::pateintinfo()
{
    cout<<endl;
    cout<<"                   Fill the Details(without space)\n";
    cout<<endl;
    cout<<"            Name of patient : ";
    cin>>name;
    cout<<"           Father/Husband name : ";
    cin>>fname;
    cout<<"           Age : ";
    cin>>age;
    cout<<"          City : ";
    cin>>address;
    cout<<"          contact no :";
    cin>>contact;
    system("CLS");
        cout<<"\n";
        cout<<"                                The Details of Patient                           ";
        cout<<"\n";
        cout<<"\n";
        cout<<"                           Name                 : "<<name<<endl;
        cout<<"                           Fathers/Husband name : "<<fname<<endl;
        cout<<"                           Age                  : "<<age<<endl;
        cout<<"                           City                 : "<<address<<endl;
        cout<<"                           Contact no           : "<<contact<<endl;
        cout<<"\n";
        cout<<"\n";
        cout<<"\n";
        int p;
        cout<<"                The details are correct : Enter 1 & for corrected : Enter 2\n";
        cout<<"                                       Enter : ";
        cin>>p;
        cout<<"\n";
        if(p==1){
           department();
           doctor();
        }
        else{
            pateintinfo();
        }
    }
void nirbikar::thank()
{
    system("CLS");
    cout<<"\n";
    cout<<"\n";
    cout<<"\n";
    cout<<"\n";
    cout<<"                             THANK YOU                                     "<<endl;
    cout<<"               Your Appoinment is successfully booked\n";
    cout<<"                    we will contact you shortly                            "<<endl;
    cout<<"\n";
    cout<<"\n";
    cout<<"\n";
    cout<<"\n";
    // Sleep(1000);
}
void nirbikar::department()
{
    cout<<"   Select Department :"<<endl;
    cout<<"\n";
    cout<<"     1. general phsycian       -     cold cough fever"<<endl;
    cout<<"     2. paediatrician          -     childrens doctor"<<endl;
    cout<<"     3. dentist                -     teeth treatment"<<endl;
    cout<<"     4. allergist              -     alergy treatment"<<endl;
    cout<<"     5. Dermatologist          -     skin related"<<endl;
    cout<<"     6. opthalmologists        -     eye vission"<<endl;
    cout<<"     7. gynecologists          -     female health"<<endl;
    cout<<"     8. cardiologists          -     bp & heart"<<endl;
    cout<<"     9. endocrinologists       -     diabetes , growth issue , thyroid"<<endl;
    cout<<"    10. gasterologists         -     digestive system "<<endl;
    cout<<"    11. nephrologist           -     kidney disease"<<endl;
    cout<<"    12. urologist              -     urinary track(speacially for male)"<<endl;
    cout<<"    13. neurologist            -     brain related"<<endl;
    cout<<"    14. psychiatrists          -     mental health care" <<endl;
    cout<<"    15. oncologists            -     cancer related issue"<<endl;
    cout<<"    16. orthopadic surgeons    -     bone enjuries"<<endl;
    cout<<"    17. anestheologists        -     monitor the person before and after surgery"<<endl;
    cout<<"    18. Emergency cases        -     Instant TeleConsultation"<<endl;
    cout<<"    19. Go back "<<endl;
    cout<<"\n";
    cout<<"\n";
}

void nirbikar::doctor()
{
    cout<<"Enter : ";
    cin>>n;
    system("CLS");
    switch (n)
    {
        case 1:
        {
            int k , u;
            string day;
            cout<<" General physician "<<endl;
            cout<<"\n";
            cout<<"| sno. |     Doctor          | Degree | Patient visit | Fees |"<<endl;
            cout<<"|------|---------------------|--------|---------------|------|"<<endl;
            cout<<"|      |                     |        |               |      |"<<endl;
            cout<<"|  1.  | Dr. Asish verma     |  MBBS  |  mon tue sat  | 500  |"<<endl;
            cout<<"|  2.  | Dr. Dk jain         |  MD    |    tue wed    | 300  |"<<endl;
            cout<<"|  3.  | Dr. Ashok singhai   |  MD    |  fri sat sun  | 300  |"<<endl;
            cout<<"|      |                     |        |               |      |"<<endl;
